
<body>
<%- if user_signed_in? %>
  <h1 class="titulo_bienvenida">Bienvenido <%= current_user.email %></h1>
  <div class = "content_home">
  <div class = "Section">
    <div class = textoBasic>
      <h1 class = "letraTexto">
        Create Announcement
      </h1>
    </div>
    <div class = "imagenBasics">
      <%= link_to image_tag("packageImage_Home/create_image_icon.png", alt: "fondo image", width:"100", height: "100", class:"image"),
                  new_announcement_path %>
    </div>
  </div>

  <div class = "Section2">
    <div class = textoBasic>
      <h1 class = "letraTexto">
        See all Announcement
      </h1>
    </div>
    <div class = "imagenBasics">
      <%= link_to image_tag("packageImage_Home/searchAll_image_icon.jpg", alt: "fondo image", width:"100", height: "100", class:"image"),
                  index_path %>
    </div>
  </div>

  <div class = "Section3">
    <div class = textoBasic>
      <h1 class = "letraTexto">
        See your Announcement
      </h1>
    </div>
    <div class = "imagenBasics">
      <%= link_to image_tag("packageImage_Home/searOne_image_icono.png", alt: "fondo image", width:"100", height: "100", class:"image"),
                  user_path %>

    </div>
  </div>
  </div>
  <div class = "content_not">
    <h1 class = "teme_not">Notifications</h1>
      <%= @announcement.each do |announcement| %>
        <p>
        The User <%= announcement.user.email %> create a Announcement
        </p>
    <% end %>
  </div>

<% else %>
  <header id="home" class="home">
    <div class="overlay-fluid-block">
      <div class="container text-center">
        <div class="row">
          <div class="home-wrapper">
            <div class="col-md-10 col-md-offset-1">
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Sections -->
  <section id="features" class="features sections">
    <div class="container">
      <div class="row">
        <div class="main_features_content2">

          <div class="col-sm-6">
            <div class="single_features_left text-center">
              <%= image_tag("packageImage_Home/login_image.png", alt: "fondo image", width:"200", height: "200", class:"image") %>
            </div>
          </div>

          <div class="col-sm-6 margin-top-60">
            <div class="single_features_right ">
              <h2>Login</h2>
              <p>Bienvenido de nuevo</p>
              <p>
                En esta opcion vamos a login
              </p>
              <div class="features_buttom">
                <%= link_to 'Iniciar', new_user_session_path,class:"btn btn-default" %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>
  <!--End of Features 2 Section -->
  <section id="features" class="features sections">
    <div class="container">
      <div class="row">
        <div class="main_features_content2">

          <div class="col-sm-6">
            <div class="single_features_left text-center">
              <%= image_tag("packageImage_Home/registration_image.png", alt: "fondo image", width:"200", height: "200", class:"image") %>
            </div>
          </div>

          <div class = "container_home">
          <div class="col-sm-6 margin-top-60">
            <div class="single_features_right ">
              <h2>Register</h2>
              <p>Welcome new User</p>
              <p>
                In this option you can register in the app
              </p>
              <div class="features_buttom">
                <%= link_to 'Registrarme', new_user_registration_path,class:"btn btn-default" %>
              </div>
            </div>
          </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <!--Footer-->
  <footer id="footer" class="footer">
    <div class="container">
      <div class="row">
        <div class="footer-wrapper">

          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="footer-brand">
              <%= image_tag("packageImage_Home/imageHome.png", alt: "fondo image", width:"70", height: "70", class:"image") %>
            </div>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="copyright">
              <p>Made with <i class="fa fa-heart"></i> by <a target="_blank" href="http://bootstrapthemes.co"> Bootstrap Themes </a>2016. All rights reserved.</p>

            </div>
          </div>

        </div>
      </div>
    </div>
  </footer>





<% end %>
</body>