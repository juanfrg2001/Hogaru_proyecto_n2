<% @announcements.each do |announcement| %>

  <div class = "content content_index">
    <h1><%= announcement.title%></h1>
    <p>
    Escrito por: <%= announcement.user.email %>
    </p>
    <% if announcement.visits_count != 0%>
       <p>Visitas = TRUE</p>
    <% end %>
    <div class = "text_content">
    <%= announcement.body %>
    </div>
    <div class = "text_content">
      <p>Fecha de creacion:  <%= announcement.date %> </p>
    </div>
    <%= link_to "Visit", announcement,class:"btn" %>
    <%= link_to "Delete", announcement, method: :delete %>
  </div>

<% end %>





